<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            prefWidth="900" prefHeight="520"
            fx:controller="com.csc213.kazioffice_marriageregisteroffice.Witness.WitnessVerifyIDController">

    <!-- PAGE TITLE -->
    <Label text="Witness - Verify Identities of Bride and Groom"
           style="-fx-font-size:18px; -fx-font-weight:bold;"
           AnchorPane.topAnchor="10" AnchorPane.leftAnchor="15"/>

    <!-- CASE SELECTION SECTION -->
    <Label text="Select Case:"
           AnchorPane.topAnchor="60" AnchorPane.leftAnchor="20"/>
    <ComboBox fx:id="cbCaseList"
              promptText="Select Marriage Case"
              prefWidth="250"
              AnchorPane.topAnchor="55" AnchorPane.leftAnchor="120"/>

    <Button text="Load Case"
            fx:id="btnLoadCase"
            onAction="#onLoadCase"
            AnchorPane.topAnchor="55" AnchorPane.leftAnchor="380"/>

    <!-- TABLE OF CASES -->
    <TableView fx:id="tvCases"
               prefWidth="860" prefHeight="170"
               AnchorPane.topAnchor="100" AnchorPane.leftAnchor="20">
        <columns>
            <TableColumn fx:id="colCaseId" text="Case ID" prefWidth="120"/>
            <TableColumn fx:id="colBride" text="Bride Name" prefWidth="200"/>
            <TableColumn fx:id="colGroom" text="Groom Name" prefWidth="200"/>
            <TableColumn fx:id="colDate" text="Marriage Date" prefWidth="150"/>
            <TableColumn fx:id="colStatus" text="Status" prefWidth="150"/>
        </columns>
    </TableView>

    <!-- FORM SECTION -->
    <Label text="Bride NID:"
           AnchorPane.topAnchor="290" AnchorPane.leftAnchor="20"/>
    <TextField fx:id="tfBrideNID"
               prefWidth="200"
               AnchorPane.topAnchor="285" AnchorPane.leftAnchor="120"/>

    <Label text="Groom NID:"
           AnchorPane.topAnchor="330" AnchorPane.leftAnchor="20"/>
    <TextField fx:id="tfGroomNID"
               prefWidth="200"
               AnchorPane.topAnchor="325" AnchorPane.leftAnchor="120"/>

    <Label text="Verification Result:"
           AnchorPane.topAnchor="370" AnchorPane.leftAnchor="20"/>
    <ComboBox fx:id="cbVerificationResult"
              prefWidth="200"
              promptText="Select"
              AnchorPane.topAnchor="365" AnchorPane.leftAnchor="150"/>

    <!-- NOTES -->
    <Label text="Notes:" AnchorPane.topAnchor="290" AnchorPane.leftAnchor="360"/>
    <TextArea fx:id="taNotes"
              prefWidth="350" prefHeight="100"
              wrapText="true"
              AnchorPane.topAnchor="285" AnchorPane.leftAnchor="420"/>

    <!-- RADIO BUTTONS -->
    <RadioButton fx:id="rbIdentityMatched"
                 text="Identity Matched"
                 AnchorPane.topAnchor="410" AnchorPane.leftAnchor="20"/>

    <RadioButton fx:id="rbIdentityMismatch"
                 text="Identity Mismatch"
                 AnchorPane.topAnchor="410" AnchorPane.leftAnchor="160"/>

    <!-- SUBMIT BUTTON -->
    <Button text="Submit Verification"
            fx:id="btnSubmitVerification"
            onAction="#onSubmitVerification"
            prefWidth="200"
            AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="20"/>

</AnchorPane>
